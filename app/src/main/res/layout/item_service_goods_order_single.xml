<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_goods"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#1a1a1a"
            android:textSize="13sp"
            app:layout_constraintLeft_toRightOf="@id/iv_goods"
            app:layout_constraintRight_toLeftOf="@id/tv_time_end"
            app:layout_constraintTop_toTopOf="@id/iv_goods"
            tools:text="香草拿铁" />

        <TextView
            android:id="@+id/tv_goods_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#999999"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@id/tv_goods_price"
            app:layout_constraintLeft_toLeftOf="@id/tv_goods_name"
            app:layout_constraintRight_toRightOf="@id/tv_goods_name"
            app:layout_constraintTop_toBottomOf="@id/tv_goods_name"
            tools:text="大/加冰/不加糖" />

        <TextView
            android:id="@+id/tv_goods_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#1a1a1a"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_goods"
            app:layout_constraintLeft_toLeftOf="@id/tv_goods_name"
            app:layout_constraintRight_toRightOf="@id/tv_goods_name"
            tools:text="￥9.99" />

        <TextView
            android:id="@+id/tv_time_end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="26dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#1a1a1a"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_goods_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_goods_name"
            tools:text="05:38s" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#1a1a1a"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_goods"
            app:layout_constraintRight_toRightOf="@id/tv_time_end"
            tools:text="配送中" />

        <TextView
            android:id="@+id/tv_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:background="@drawable/radius_yellow_10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingStart="22dp"
            android:paddingTop="4dp"
            android:paddingEnd="22dp"
            android:paddingBottom="4dp"
            android:singleLine="true"
            android:textColor="#1a1a1a"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_goods"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="抢单" />
        
        <View
            android:id="@+id/view_bottom"
            android:layout_width="0dp"
            android:layout_height="0.6dp"
            android:background="#dadada"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/iv_goods"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>